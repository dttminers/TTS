<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black1">

    <ImageView
        android:id="@+id/ivCircle_pink"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:contentDescription="@string/str_logo_image"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-45dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:src="@drawable/circle_pink" />

    <ImageView
        android:id="@+id/ivPink_line"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:contentDescription="@string/str_logo_image"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:src="@drawable/line_2" />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/text2"
       android:layout_marginLeft="70dp"
       android:layout_marginStart="70dp"
       android:layout_marginBottom="10dp"
       android:layout_above="@id/ivPink_line"/>

</RelativeLayout>