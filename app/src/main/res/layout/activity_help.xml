<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".activities.HelpActivity">

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:id="@+id/rlFaq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFaq"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="2dp"
            android:contentDescription="@string/str_logo_image"
            android:src="@drawable/ic_faq"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:padding="2dp"
            android:layout_toEndOf="@+id/ivFaq"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="@string/str_faq" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:id="@+id/rlTermPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivTermPolicy"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="2dp"
            android:contentDescription="@string/str_logo_image"
            android:src="@drawable/ic_term_privacy"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:padding="2dp"
            android:fontFamily="sans-serif"
            android:layout_toEndOf="@+id/ivTermPolicy"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="@string/str_terms_and_privacy_policy" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlAppInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAppInfo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="2dp"
            android:contentDescription="@string/str_logo_image"
            android:src="@drawable/ic_app_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:padding="2dp"
            android:fontFamily="sans-serif"
            android:layout_toEndOf="@+id/ivAppInfo"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="@string/str_app_info" />

    </RelativeLayout>



</LinearLayout>