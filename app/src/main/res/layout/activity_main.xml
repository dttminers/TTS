    <RelativeLayout
        android:id="@+id/activity_main"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        tools:context="com.truiton.bottomnavigation.MainActivity">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tabs"
            android:animateLayoutChanges="true"/>


        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:tabBackground="@color/white"
            app:tabGravity="fill"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentBottom="true"
            app:tabIndicatorHeight="3dp"
            app:tabIndicatorColor="@color/ttsRed"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@android:color/holo_red_dark">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|fill"
                android:icon="@drawable/browser_24dp" />

            <android.support.design.widget.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center|fill"
                android:icon="@drawable/archive_black_24dp"/>

            <android.support.design.widget.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center|fill"
                android:icon="@drawable/ic_home_black_24dp"/>

            <android.support.design.widget.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center|fill"
                android:icon="@drawable/ic_assignment_black_24dp"/>

            <android.support.design.widget.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center|fill"
                android:icon="@drawable/image_black_24dp"/>


        </android.support.design.widget.TabLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>


