<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_cornor_white_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvImgOcr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:maxLines="10"
        android:ellipsize="end"
        android:textColor="@color/warm_grey1"
        android:textSize="12sp"
        android:padding="10dp"/>

    <view
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey6" />

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivRefresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/bg_black_ring"
            android:contentDescription="@string/str_reload"
            android:padding="5dp"
            android:src="@drawable/ic_refresh" />

        <ImageView
            android:id="@+id/ivSpeak"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:contentDescription="@string/str_speak"
            android:padding="2dp"
            android:src="@drawable/ic_speak" />


    </LinearLayout>
</LinearLayout>